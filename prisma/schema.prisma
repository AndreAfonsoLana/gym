// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String  @unique
  password String?
  rule     String?
  isActive Boolean @default(true)
}

model Student {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String @unique

  idUser   Int?
  isActive Boolean @default(true)
}
